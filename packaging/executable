set -e

CONFIG_FILE="/etc/nimiq/nimiq.conf"
if [ -r "$CONFIG_FILE" ]; then
  . "$CONFIG_FILE"
fi

if [ -r "${KEY}" -a -r "${CERT}" -a -n "${HOST}" -a -n "${PORT}" ]; then
  /usr/share/{{ node_deb_package_name }}/app/{{ cli_entrypoint }} --key=${KEY} --cert=${CERT} --host=${HOST} --port=${PORT} ${OPTS} "$@"
else
  /usr/share/{{ node_deb_package_name }}/app/{{ cli_entrypoint }} --dumb ${OPTS} "$@"
fi

